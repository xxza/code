 <%- include header %>

  <form class="form-horizontal" method="post">
    <div class="form-group">
      <label for="用户名" class="col-sm-2 control-label">用户名</label>
      <div class="col-sm-10">
       <input type="text" name="name" placeholder="用户名"/>
      </div>
    </div>
    <div class="form-group">
      <label for="密码" class="col-sm-2 control-label">密码</label>
      <div class="col-sm-10">
        <input type="password" name="password" placeholder="密码"/>
      </div>
    </div>
    <div class="form-group">
      <label for="确认密码" class="col-sm-2 control-label">确认密码</label>
      <div class="col-sm-10">
        <input type="password" name="password-repeat" placeholder="确认密码"/>
      </div>
    </div>
    <div class="form-group">
      <label for="邮箱" class="col-sm-2 control-label">邮箱</label>
      <div class="col-sm-10">
        <input type="email" name="email" placeholder="输入邮箱"/>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-default">注册</button>
      </div>
    </div>
  </form>
<%- include footer %>